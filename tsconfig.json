{
    "compilerOptions": {
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true
    },
    "exclude": ["node_modules", "dist"]
}
